<%= form_for :article, url: category_articles_path do |article| %>
  <div>
    <%= label_tag :title %>
  </div>
  <div>
    <%= article.text_field :title %>
  </div>

  <div>
    <%= label_tag :description%>
  </div>
  <div>
    <%= article.text_area :description %>
  </div>

  <div>
    <%= article.submit %>
  </div>
<% end %>
